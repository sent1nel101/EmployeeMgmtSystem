# Production Environment Configuration Template
# Copy this to .env and update with your production values

# Database Configuration
DB_NAME=capstone_db
DB_USER=capstone_user
DB_PASSWORD=your_secure_password_here
DB_HOST=database
DB_PORT=5432

# Backend Configuration
SPRING_PROFILE=prod
BACKEND_PORT=8080
JWT_SECRET=your_very_secure_jwt_secret_key_here_min_32_chars
JWT_EXPIRATION=86400

# Frontend Configuration
FRONTEND_PORT=80
FRONTEND_API_URL=http://localhost:8080/api

# Redis Configuration
REDIS_PASSWORD=your_redis_password_here
REDIS_PORT=6379

# Docker Configuration
COMPOSE_PROJECT_NAME=capstone

# SSL Configuration (for production with HTTPS)
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/private.key

# Logging
LOG_LEVEL=INFO
