# Environment Configuration for Docker Deployment
# Copy this file to .env.local and customize for your environment

# Database Configuration
DB_NAME=capstone_db
DB_USER=capstone_user
DB_PASSWORD=capstone_password_123
DB_PORT=5432

# Backend Configuration
BACKEND_PORT=8080
SPRING_PROFILE=prod

# JWT Configuration
JWT_SECRET=myVerySecureJWTSecretKey123456789AbCdEf
JWT_EXPIRATION=86400

# Frontend Configuration
FRONTEND_PORT=80
FRONTEND_API_URL=http://localhost:8080/api

# Redis Configuration
REDIS_PASSWORD=redis_secure_password
REDIS_PORT=6379

# SSL Configuration (for production)
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Monitoring
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# Resource Limits
DB_MEMORY_LIMIT=1G
BACKEND_MEMORY_LIMIT=2G
FRONTEND_MEMORY_LIMIT=512M
REDIS_MEMORY_LIMIT=256M
