{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "mvn clean package -DskipTests"
  },
  "deploy": {
    "startCommand": "ls -la && find . -name '*.jar' && java -Xms256m -Xmx512m -Dserver.port=$PORT -Dserver.address=0.0.0.0 -Dspring.profiles.active=prod -Djava.awt.headless=true -jar target/capstone-0.0.1-SNAPSHOT.jar",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
