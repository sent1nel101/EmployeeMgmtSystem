{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "mvn clean package -DskipTests"
  },
  "deploy": {
    "startCommand": "ls -la target/ && java -Xms256m -Xmx512m -XX:+UseContainerSupport -XX:MaxRAMPercentage=80.0 -Dserver.port=$PORT -Dserver.address=0.0.0.0 -Dspring.profiles.active=prod -Djava.awt.headless=true -jar target/*.jar",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
